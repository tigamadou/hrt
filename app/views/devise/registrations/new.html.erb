<div class="columns is-marginless">
  <div class="column is-3-desktop is-paddingless">
    <div class="hero is-fullheight is-white">
     <div class="hero-body">
       <div class="container ">
        <h1 class="title">Sign Up</h1>
        <div class="form-inputs">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            
            <div class="has-text-centered">
              <%= image_tag('logo.png')%>
            </div>
            <br>
              
              <%= f.error_notification %>
              <div class="field">
                <div class="control">
                  <%= f.input :username,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "username", class: "input" }, wrapper: false, label_html: { class: "label"}%>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :full_name,
                          required: true,
                          input_html: { autocomplete: "Your full name", class: "input" }, wrapper: false, label_html: { class: "label"}%>
                </div>
              </div>
              <div class="field">
                
                <div class="control">
                  <%= f.input :email,
                          required: true,
                          input_html: { autocomplete: "email", class: "input" }, wrapper: false, label_html: { class: "label"}%>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "input" }, label_html: {class: "label"},wrapper: false %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "input" }, wrapper: false, label_html: { class: "label"} %>
                </div>
              </div>
              <div class="field">
                <div class="form-actions">
                  <%= f.button :submit, "Sign up", class: "button is-primary is-medium" %>
                </div>
              </div>
           

            
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
           </div>
       </div>
     </div>
   </div>
  </div>
  <div class="column is-paddingless is-hidden-touch">
    <div class="hero sesbakg is-fullheight is-white">
   <div class="hero-body" >
     <div class="container">
       
     </div>
   </div>
 </div>
  </div>
</div>