<div class="columns is-marginless">
  <div class="column is-3-desktop is-paddingless">
    <div class="hero is-fullheight is-white">
     <div class="hero-body">
       <div class="container">
        <h1 class="title">Sign In</h1>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email",class: "input" },wrapper: false, label_html: { class: "label"} %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" ,class: "input" },wrapper: false, label_html: { class: "label"} %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :remember_me,wrapper: false, label_html: { class: "label"}, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Log in",class: "button is-primary is-medium" %>
              </div>
            </div>
              
              
          


              
      
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
           
       </div>
     </div>
   </div>
  </div>
  <div class="column is-paddingless is-hidden-touch">
    <div class="hero sesbakg is-fullheight is-white">
   <div class="hero-body" >
     <div class="container">
       
     </div>
   </div>
 </div>
</div>
 