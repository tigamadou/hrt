
<div class="container-fluid page">
    <div class="tabs is-medium">
        <ul>
            <li class="is-active"><a>TWEETS</a></li>
            
        </ul>
    </div>
    <div class="container">

        <div class="feeds">

            <div class="card new_post">

                <div class="card-content">
                   <%= form_for(:post) do |f|%>
                      <div class = "field">
                          <%= f.label "Tweet SOmething", class: 'label'  %>
                          <div class="control">
                            <%= f.text_field :text, class: 'input' %>
                          </div>
                        </div>
                    <% end %>
                    
                </div>

            </div>

            <div class="card tweet_feed">
                <div class="card-header">
                    <div class="card-header-title">
                        <%= @posts.length%> NEW TWEET<%if @posts.length >1 %>S<% end %>
                    </div>
                </div>
                <div class="card-content ">
                    <ul class="tweet_list">
                        <% @posts.each do |post| %>
                        <li class="tweet">
                            <div class="image">
                                <img src="https://placehold.it/200x200/000/fff" alt="">
                            </div>
                            <div class="details ">
                                <h3 class="title">
                                    <span>
                                      Myley Ray Cyrus
                                    </span>
                                    <span class="date"title="<%= post.created_at%>">
                                        
                                            <%= time_ago_in_words(post.created_at)%>
                                      
                                    </span>
                                    <div class="dropdown is-pulled-right is-small is-rounded is-hoverable">
                                      <div class="dropdown-trigger">
                                        <button class="button is-small is-rounded" aria-haspopup="true" aria-controls="dropdown-menu6">
                                          
                                          <span class="icon is-small">
                                            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                          </span>
                                        </button>
                                      </div>
                                      <div class="dropdown-menu" id="dropdown-menu6" role="menu">
                                        <div class="dropdown-content">
                                          <a class="dropdown-item" href="<%= new_post_path %>">
                                            <span>View</span>
                                          </a>
                                          <a class="dropdown-item" href="<%=  edit_post_path(post) %>">
                                            <span>Edit</span>
                                          </a>
                                          <a class="dropdown-item" href="<%= post_path(post) %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow" >
                                            <span>Delete</span>
                                          </a>
                                          
                                        </div>
                                      </div>
                                    </div>
                                </h3>
                                <p class="content ">
                                    <%= post.text %>
                                </p>
                                <p class="actions">
                                  <a href="" class="button is-rounded is-small is-white">
                                    <span class="icon"><i class="fa fa-comment"></i></span>
                                    <span>0</span>
                                  </a>
                                  <a href="" class="button is-rounded is-small is-white">
                                    <span class="icon"><i class="fa fa-heart"></i></span>
                                    <span>0</span>
                                  </a>
                                </p>
                                
                            </div>
                            
                        </li>
                        <% end %>
                  
                    </ul>
                </div>
            </div>
        </div>

    </div>
<p id="notice"><%= notice %></p>
                        
</div>
<div class="sidebar">
    <%=render 'sidebar/who_to_follow'%>

    
</div>

