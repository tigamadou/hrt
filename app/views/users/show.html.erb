<div class="container-fluid page">
  <figure class="image is-3by1">
    <img src="https://placehold.it/720x240" />
  </figure>
                    <div class="tabs is-medium">
                        <ul>
                            <li class="is-active"><a>TWEETS</a></li>
                        </ul>
                    </div>
                    <div class="container">

                        <div class="feeds">


                            <%= render 'shared/posts'%>
                        </div>

                    </div>
                </div>
                <div class="sidebar">
                    <div class="card">
                        <div class="card-content">
                            <div class="profile">
                                <div class="actions">
                                  <% if current_user.following?(@user).nil?%>
                                    <%= form_for(@user, url: create_following_path(@user), method: :post) do |f| %>
                                      <%= f.hidden_field :user_id, value: @user.id %>

                                      <button class="more">
                                              <span class=""><i class="fa fa-plus"></i></span>
                                        
                                      </button>
                                    <% end %>
                                  <% else %>
                                    <button class="more">
                                              <span class=""><i class="fa fa-check"></i></span>
                                        
                                      </button>
                                  <% end %>
                                    <div class="image">
                                        <img src="https://placehold.it/120x120/fff/000" alt="" class="is-rounded">
                                    </div>
                                    <div class="more">
                                        <a href="#">
                                            <span class=""><i class="fa fa-list-ul"></i></span>
                                        </a>
                                    </div>
                                </div>
                                <div class="info">
                                    <h4 class="name"><%= @user.full_name%></h4>
                                    <div class="link">@<%= @user.username%></div>
                                </div>
                                <div class="stats">
                                    <div>
                                        <div class="nbr"><%= @user.posts.count%></div>
                                        <div class="text">Tweets</div>
                                    </div>
                                    <div>
                                        <div class="nbr"><%= @user.followings.count %></div>
                                        <div class="text">Following</div>
                                    </div>
                                    <div>
                                        <div class="nbr"><%= @user.followers.count %></div>
                                        <div class="text">Followers</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card ">
                        <div class="card-title">
                            <div class="card-header-title">
                                <span>Followed By</span>
                            </div>
                        </div>
                        <div class="card-content">
                            <% if @user.followers.count >0%>
                            <ul class="ulist">
                              <% @user.followers.limit(10).each do |follower|%>
                                <li>
                                    <div class="gr-1 d-flex">

                                        <figure class="image small">
                                            <a href="#"></a>
                                            <img src="https://placehold.it/50x50/000/fff" class="is-rounded" alt="">
                                            </a>
                                        </figure>
                                        <div class="info">
                                            <h4 class="uname">
                                                <a href="<%= show_user_path(follower.username)%>"><%= follower.full_name%></a>
                                            </h4>
                                            <div class="ulink"><a href="#">@<%= follower.username%></a></div>
                                        </div>
                                    </div>
                                    <div class="more">
                                        <a href="#">
                                            <span class="icon is-rounded"><i class="fa fa-plus"></i></span>
                                        </a>
                                    </div>
                                </li>
                              <% end%>
                               
                                

                            </ul>
                            <% else %>
                              No followers for now.
                            <% end %>
                        </div>
                       
                    </div>


                </div>
