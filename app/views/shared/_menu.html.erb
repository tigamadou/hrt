            <div class="user">

                <div class="details">
                    <div class="image is-64x64 is-rounded">
                        
                        <%= user_photo(current_user)%>
                    </div>
                    <div class="name">
                        <span><%= current_user.full_name %></span>
                    </div>
                </div>
                <div class="stats">
                    <div class="following">
                        <div>
                            <p class="nb"><%= current_user.followings.count %></p>
