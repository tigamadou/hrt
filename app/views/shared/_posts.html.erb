<div class="card tweet_feed">
                <div class="card-header">
                    <div class="card-header-title">
                        <%= @posts.length%> NEW TWEET<%= is_plural(@posts.length)%>
                    </div>
                </div>
                <div class="card-content ">
                    <ul class="tweet_list">
                        <% @posts.each do |post| %>
                        
                        <li class="tweet">
                            <article class="media">
                              <figure class="media-left">
                                <p class="image is-64x64 is-rounded">
                                  <%= user_photo(post.author )%>
                                </p>
                              </figure>
                              <div class="media-content">
                                <div class="content">
                                  <p>
                                    <a href="<%= show_user_path(post.author.username)%>" class="author">
                                    <strong><%= post.author.full_name%></strong>
                                    </a>
                                    <a href="<%= show_user_path(post.author.username)%>" class="uname">
                                        <span>@<%= post.author.username%></span>
                                    </a>
                                     <span class="date"><%= time_ago_in_words(post.created_at)%></span>
                                    <br>
                                     <%= post.text %>
                                  </p>
                                </div>
                                <nav class="level is-mobile">
                                  <div class="level-left">
                                    <a class="level-item"  href="<%= post_path(post) %>">
                                      <span class="icon "><i class="fa fa-comment"></i></span>
                                      <span>0</span>
                                    </a>
                                    
                                    <a class="level-item">
                                      <span class="icon "><i class="fa fa-heart"></i></span>
                                      <span>0</span>
                                    </a>
                                  </div>
                                </nav>
                              </div>
                              <div class="media-right">
                                <%= actions_menu(post) %>
                              </div>
                            </article>
                        </li>
                        <% end %>
                  
                    </ul>
                </div>
            </div>